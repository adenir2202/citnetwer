<%= form_for(@transaction) do |f| %>
  <ul>
  <% @transaction.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :argument %><br />
    <%= f.text_area :argument %>
  </p>
  
  <p>
    <%= f.label :answerType %><br />
    <%= f.text_field :answerType %>
  </p>
  
  <p>
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </p>
  	  
  <p>
    <%= f.submit %>
  </p>
<% end %>
