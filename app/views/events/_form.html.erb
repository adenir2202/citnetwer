<%= form_for [@event ] do |f| %>
	<ul>
	  	<% @event.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
	
	  	<p><%= f.label :code%><br/>				<%= f.text_area :code %>  </p>
	  	<p><%= f.label :name %><br/>			<%= f.text_field :name %> </p>
	  	<p><%= f.label :argument %><br/>		<%= f.text_area :argument %>  </p>
	  	<p><%= f.label :answer %><br/>			<%= f.text_area :answer %>  </p>
	  	<p><%= f.label :answerType %><br/>		<%= f.text_field :answerType %></p>
	  	<p><%= f.label :language %><br/>		<%= f.text_field :language %> </p>
	  	<p><%= f.label :transaction_id%><br/>	<%= f.text_field :transaction_id %> </p>
	
	  	<p><%= f.submit 'Submit' %></p>
  
		<p><%= link_to "<< Back to transactions list", transactions_path , class: "new_article" %>	</p>
	
<% end %>